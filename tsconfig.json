{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"noImplicitAny": false,
		"paths": {
			"actions/*": ["./actions/*"],
			"components/*": ["./components/*"],
			"constants/*": ["./constants/*"],
			"contexts/*": ["./contexts/*"],
			"enumerations/*": ["./enumerations/*"],
			"helpers/*": ["./helpers/*"],
			"hooks/*": ["./hooks/*"],
			"providers/*": ["./providers/*"],
			"shadcn/*": ["./shadcn/*"],
			"services/*": ["./services/*"],
			"styles/*": ["./styles/*"],
			"translations/*": ["./translations/*"],
			"types/*": ["./types/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "providers/translation-provider-container.tsx"]
}
